@using Entities
@model User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Smarttek |</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/SiteDosyalar/plugins/fontawesome-free/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/SiteDosyalarplugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/SiteDosyalar/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Smarttek Bilişim</b></a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Giriş yapmak için oturum acın</p>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(false)
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", placeholder = "Mail Adresiniz" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.Sifre, new { @class = "form-control", type = "password", placeholder = "Şifreniz" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="~/SiteDosyalar/plugins/jquery/jquery.min.js"></script>
    <script src="~/SiteDosyalar/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/SiteDosyalar/dist/js/adminlte.min.js"></script>

</body>
</html>

